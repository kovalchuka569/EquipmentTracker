<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    
                    xmlns:sf="http://schemas.syncfusion.com/wpf">
    
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/Resources;component/Global/Common.xaml"/>
        <ResourceDictionary Source="pack://application:,,,/Resources;component/Icons/Icons.xaml"/>
        <ResourceDictionary Source="pack://application:,,,/Resources;component/Global/Brushes.xaml"/>
        <ResourceDictionary Source="pack://application:,,,/Resources;component/Templates/SfButtonAdv.Templates.xaml"/>
        <ResourceDictionary Source="/Syncfusion.Themes.Windows11Light.WPF;component/buttonadv/buttonadv.xaml"/>
    </ResourceDictionary.MergedDictionaries>
    
    <Style x:Key="BaseButtonStyle" TargetType="sf:ButtonAdv" BasedOn="{StaticResource SyncfusionButtonAdvStyle}">
        <Setter Property="Template" Value="{StaticResource DefaultButtonAdvTemplate}"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Style.Triggers>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Opacity" Value="0.5"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="DefaultButtonStyle" TargetType="sf:ButtonAdv" BasedOn="{StaticResource BaseButtonStyle}">
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource Neutral.Brush}"/>
                <Setter Property="Cursor" Value="Hand"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="{StaticResource NeutralDark1.Brush}"/>
            </Trigger>
        </Style.Triggers> 
    </Style>
    
    <Style x:Key="DefaultButtonWithoutIconStyle" TargetType="sf:ButtonAdv" BasedOn="{StaticResource DefaultButtonStyle}">
        <Setter Property="Template" Value="{StaticResource OnlyLabelButtonAdvTemplate}"/>
    </Style>
    
    <Style x:Key="DefaultButtonWithoutLabelStyle" TargetType="sf:ButtonAdv" BasedOn="{StaticResource DefaultButtonStyle}">
        <Setter Property="Template" Value="{StaticResource OnlyIconButtonAdvTemplate}"/>
    </Style>
    
    <Style x:Key="DefaultRoundedGlyphButtonStyle" TargetType="sf:ButtonAdv" BasedOn="{StaticResource DefaultButtonWithoutLabelStyle}">
        <Setter Property="CornerRadius" Value="14"/>
        <Setter Property="Padding" Value="0"/>
    </Style>
    
    <Style x:Key="DefaultPrimaryButtonStyle" TargetType="sf:ButtonAdv" BasedOn="{StaticResource BaseButtonStyle}">
        <Setter Property="Background" Value="{StaticResource Primary.Brush}"/>
        <Setter Property="Foreground" Value="{StaticResource White.Brush}"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource PrimaryDark1.Brush}"/>
                <Setter Property="Cursor" Value="Hand"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="{StaticResource PrimaryDark2.Brush}"/>
            </Trigger>
        </Style.Triggers>  
    </Style>
    
    <Style x:Key="PrimaryButtonWithoutIconStyle" TargetType="sf:ButtonAdv" BasedOn="{StaticResource DefaultPrimaryButtonStyle}">
        <Setter Property="Template" Value="{StaticResource OnlyLabelButtonAdvTemplate}"/>
    </Style>
    
    <Style x:Key="PrimaryButtonWithoutLabelStyle" TargetType="sf:ButtonAdv" BasedOn="{StaticResource DefaultPrimaryButtonStyle}">
        <Setter Property="Template" Value="{StaticResource OnlyIconButtonAdvTemplate}"/>
    </Style>
    
    <Style x:Key="DefaultWarningButtonStyle" TargetType="sf:ButtonAdv" BasedOn="{StaticResource DefaultPrimaryButtonStyle}">
        <Setter Property="Background" Value="{StaticResource Warning.Brush}"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource WarningDark1.Brush}"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="{StaticResource WarningDark2.Brush}"/>
            </Trigger>
        </Style.Triggers>  
    </Style>
    
    <Style x:Key="WarningButtonWithoutIconStyle" TargetType="sf:ButtonAdv" BasedOn="{StaticResource DefaultWarningButtonStyle}">
        <Setter Property="Template" Value="{StaticResource OnlyLabelButtonAdvTemplate}"/>
    </Style>
    
    <Style x:Key="WarningButtonWithoutLabelStyle" TargetType="sf:ButtonAdv" BasedOn="{StaticResource DefaultWarningButtonStyle}">
        <Setter Property="Template" Value="{StaticResource OnlyIconButtonAdvTemplate}"/>
    </Style>
    
</ResourceDictionary>