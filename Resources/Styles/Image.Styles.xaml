<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/Resources;component/Global/Common.xaml"/>
    </ResourceDictionary.MergedDictionaries>  
    
    <Style x:Key="BaseImageStyle" TargetType="Image">
        <Setter Property="UseLayoutRounding" Value="True"/>
    </Style>
    
    <Style x:Key="SmallImageStyle" TargetType="Image" BasedOn="{StaticResource BaseImageStyle}">
        <Setter Property="Width" Value="{StaticResource SmallIconWidth}"/>
        <Setter Property="Height" Value="{StaticResource SmallIconHeight}"/>
    </Style>
    
    <Style x:Key="LargeImageStyle" TargetType="Image" BasedOn="{StaticResource BaseImageStyle}">
        <Setter Property="Width" Value="{StaticResource LargeIconHeight}"/>
        <Setter Property="Height" Value="{StaticResource LargeIconWidth}"/>
    </Style>
    
</ResourceDictionary>