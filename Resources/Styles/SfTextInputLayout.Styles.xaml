<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sf="http://schemas.syncfusion.com/wpf">
    
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/Resources;component/Templates/SfTextInputLayout.Templates.xaml"/>
        <ResourceDictionary Source="/Syncfusion.Themes.Windows11Light.WPF;component/sftextinputlayout/sftextinputlayout.xaml"/>
    </ResourceDictionary.MergedDictionaries>
    
    <Style x:Key="DefaultSfTextInputStyle" TargetType="sf:SfTextInputLayout" BasedOn="{StaticResource SyncfusionSfTextInputLayoutStyle}">
        <Setter Property="Template" Value="{StaticResource DefaultSfTextInputTemplate}"/>
        <Setter Property="FocusedStrokeThickness" Value="1"/>
        <Setter Property="FocusedBorderBrush" Value="{StaticResource Primary.Brush}"/>
    </Style>
    
</ResourceDictionary>