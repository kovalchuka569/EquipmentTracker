<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:cv="clr-namespace:Resources.Converters">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/Resources;component/Styles/Dialog.Styles.xaml" />
        <ResourceDictionary Source="pack://application:,,,/Resources;component/Styles/TextBlock.Styles.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <cv:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
    
    <cv:ButtonStyleToStyleConverter x:Key="ButtonStyleToStyleConverter"
                                    DefaultStyle="{StaticResource DefaultButtonWithoutIconStyle}"
                                    PrimaryStyle="{StaticResource PrimaryButtonWithoutIconStyle}"
                                    WarningStyle="{StaticResource WarningButtonWithoutIconStyle}"/>
    
    <cv:DialogBoxIconToImageSourceConverter x:Key="DialogBoxIconToImageSourceConverter"
                                            AlertImageSource="{StaticResource Alert.Red.Fill.128}"/>
    
</ResourceDictionary>