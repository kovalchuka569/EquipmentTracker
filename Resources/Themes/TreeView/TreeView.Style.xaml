<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sf="http://schemas.syncfusion.com/wpf">
    
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Syncfusion.Themes.Windows11Light.WPF;component/SfTreeView/SfTreeView.xaml" />
    </ResourceDictionary.MergedDictionaries>
    
    <Style x:Key="MarkedItemsTreeViewStyle" 
           TargetType="{x:Type sf:SfTreeView}"
           BasedOn="{StaticResource SyncfusionSfTreeViewStyle}">
            
        <Setter Property="Background" Value="Gray"/>
        <Setter Property="VerticalAlignment" Value="Top"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
            
    </Style>
    
</ResourceDictionary>