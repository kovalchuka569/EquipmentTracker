<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:Controls;assembly=Controls"
                    xmlns:localization="clr-namespace:Resources.Localization">
    
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/Resources;component/Icons/Close/Close.xaml"/>
        <ResourceDictionary Source="pack://application:,,,/Resources;component/Icons/Right/Right.xaml"/>
        <ResourceDictionary Source="pack://application:,,,/Resources;component/Icons/Check/Check.xaml"/>
    </ResourceDictionary.MergedDictionaries>  
    
    <Style x:Key="DefaultPrimaryHoverButtonStyle" 
           TargetType="controls:HoverButton">
        
        <Setter Property="ContentPadding" Value="2"/>
        <Setter Property="NormalIconWidth" Value="20"/>
        <Setter Property="HoverIconWidth" Value="20"/>
        <Setter Property="NormalIconHeight" Value="20"/>
        <Setter Property="HoverIconHeight" Value="20"/>
        <Setter Property="NormalBackground" Value="#09244B"/>
        <Setter Property="HoverBackground" Value="#E8E8E8"/>
        <Setter Property="ContentFill" Value="#E8E8E8"/>
        <Setter Property="HoverContentFill" Value="#09244B"/>
        <Setter Property="Height" Value="25"/>
        
    </Style>

    
    <Style x:Key="CloseDialogHoverButtonStyle" 
           TargetType="controls:HoverButton"
           BasedOn="{StaticResource DefaultPrimaryHoverButtonStyle}">
        
        <Setter Property="ContentPadding" Value="6"/>
        <Setter Property="NormalIconContent" Value="{StaticResource CloseWhiteLine64}"/>
        <Setter Property="HoverIconContent" Value="{StaticResource CloseDarkLine64}"/>
        <Setter Property="NormalIconWidth" Value="16"/>
        <Setter Property="HoverIconWidth" Value="16"/>
        <Setter Property="NormalIconHeight" Value="16"/>
        <Setter Property="HoverIconHeight" Value="16"/>
        <Setter Property="ChangeIconHover" Value="True"/>
        <Setter Property="VerticalAlignment" Value="Top"/>
        <Setter Property="HorizontalAlignment" Value="Right"/>
        <Setter Property="NormalBackground" Value="Red"/>
        <Setter Property="ButtonCornerRadius" Value="0,8,0,0"/>
        
    </Style>
    
    <Style x:Key="FinishPrimaryHoverButtonStyle"
           TargetType="controls:HoverButton"
           BasedOn="{StaticResource DefaultPrimaryHoverButtonStyle}">
        
        <Setter Property="TextContent" Value="{x:Static localization:Strings.Finish}"/>
        <Setter Property="NormalIconContent" Value="{StaticResource CheckWhiteLine64}"/>
        <Setter Property="HoverIconContent" Value="{StaticResource CheckDarkLine64}"/>
        <Setter Property="IconPosition" Value="Right"/>
        <Setter Property="ChangeIconHover" Value="True"/>
        <Setter Property="Width" Value="100"/>
        
    </Style>
    
    <Style x:Key="NextPrimaryHoverButtonStyle"
           TargetType="controls:HoverButton"
           BasedOn="{StaticResource DefaultPrimaryHoverButtonStyle}">
        
        <Setter Property="TextContent" Value="{x:Static localization:Strings.Next}"/>
        <Setter Property="NormalIconContent" Value="{StaticResource ArrowRightWhiteLine64}"/>
        <Setter Property="HoverIconContent" Value="{StaticResource ArrowRightDarkLine64}"/>
        <Setter Property="IconPosition" Value="Right"/>
        <Setter Property="ChangeIconHover" Value="True"/>
        <Setter Property="Width" Value="80"/>
        
    </Style>
    
    
    
    
    
</ResourceDictionary>