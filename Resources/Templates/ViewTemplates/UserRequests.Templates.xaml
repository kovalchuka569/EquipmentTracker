<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:lc="clr-namespace:Resources.Localization"
                    xmlns:sf="http://schemas.syncfusion.com/wpf">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/Resources;component/Global/Common.xaml" />
        <ResourceDictionary Source="pack://application:,,,/Resources;component/Icons/Icons.xaml" />
        <ResourceDictionary Source="pack://application:,,,/Resources;component/Styles/SfButtonAdv.Styles.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <DataTemplate x:Key="QueryUserListViewTemplate">
        <Border>
            
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- User information stack panel -->
                <StackPanel Grid.Column="0"
                            VerticalAlignment="Center">
                    
                    <!-- First name Last name stack panel -->
                    <StackPanel Orientation="Horizontal">
                        
                        <!-- First name text block -->
                        <TextBlock Text="{Binding FirstName}"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Margin="{StaticResource Margin0060}"
                                   ToolTip="{x:Static lc:Strings.FirstName}"/>
                        
                        <!-- Last name text block -->
                        <TextBlock Text="{Binding LastName}"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   ToolTip="{x:Static lc:Strings.LastName}"/>
                        
                    </StackPanel>

                    <TextBlock Text="{Binding Login}"
                               FontSize="13"
                               Foreground="{StaticResource NeutralDark2.Brush}"
                               Margin="{StaticResource Margin0400}"
                               HorizontalAlignment="Center"
                               ToolTip="{x:Static lc:Strings.Username}"/>
                </StackPanel>
                
                <TextBlock Text="{Binding AccessRequestedAt, StringFormat='{}{0:dd.MM.yyyy HH:mm}'}"
                           Grid.Column="2"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Right"
                           Margin="{StaticResource Margin00120}"
                           ToolTip="{x:Static lc:Strings.Time}"/>
                
                <!-- Action Buttons -->
                <StackPanel 
                    Grid.Column="3"
                    Orientation="Horizontal"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Right">
                    
                    <sf:ButtonAdv 
                        Command="{Binding DataContext.ApproveUserCommand, 
                                  RelativeSource={RelativeSource AncestorType=ListView}}"
                        CommandParameter="{Binding}"
                        Style="{StaticResource TransparencyRoundedGlyphButtonStyle}"
                        Margin="0,0,8,0"
                        SmallIcon="{StaticResource Check.Green.Line.64}"
                        ToolTip="{x:Static lc:Strings.Approve}"/>

                    <sf:ButtonAdv 
                        Command="{Binding DataContext.RejectUserCommand, 
                                  RelativeSource={RelativeSource AncestorType=ListView}}"
                        CommandParameter="{Binding}"
                        Style="{StaticResource TransparencyRoundedGlyphButtonStyle}"
                        SmallIcon="{StaticResource Cross.Red.Line.64}"
                        ToolTip="{x:Static lc:Strings.Reject}"/>
                    
                </StackPanel>
            </Grid>
        </Border>
    </DataTemplate>

</ResourceDictionary>