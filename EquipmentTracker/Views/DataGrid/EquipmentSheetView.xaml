                ClipToBounds="True"
                Background="Transparent"
                Visibility="{Binding SearchPannelVisibility, Converter={StaticResource BooleanToVisibilityConverter}}">

            <Border Width="350" Height="140"
                    SnapsToDevicePixels="True"
                    UseLayoutRounding="True"
                    Canvas.Left="{Binding SearchPanelX}"
                    Canvas.Top="{Binding SearchPanelY}"
                    Background="White"
                    BorderBrush="Black"
                    BorderThickness="1"
                    CornerRadius="5">
                
                <Border.Effect>
                    <DropShadowEffect
                        Color="#66000000"
                        Direction="300"
                        ShadowDepth="3"
                        Opacity="0.6"
                        RenderingBias="Performance" />
                </Border.Effect>
                
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="PreviewMouseDown">
                        <i:InvokeCommandAction Command="{Binding SearchPannelMouseDownCommand}"
                                               PassEventArgsToCommand="True"/>
                    </i:EventTrigger>
                    
                    <i:EventTrigger EventName="PreviewMouseMove">
                        <i:InvokeCommandAction Command="{Binding SearchPannelMouseMoveCommand}"
                                               PassEventArgsToCommand="True"/>
                    </i:EventTrigger>
                    
                    <i:EventTrigger EventName="PreviewMouseUp">
                        <i:InvokeCommandAction Command="{Binding SearchPannelMouseUpCommand}"
                                               PassEventArgsToCommand="True"/>
                    </i:EventTrigger>
                </i:Interaction.Triggers>
                
                <Grid Margin="5" ClipToBounds="True">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <Border Grid.Column="0" BorderBrush="LightGray" BorderThickness="1,0">
                            
                            <RadioButton Content="Починається з" Margin="5" 
                                         IsChecked="{Binding SearchType, 
                                         Converter={StaticResource SearchTypeToBoolConverter}, ConverterParameter=StartsWith}"
                                         GroupName="SearchMode"/>
                        </Border>
                        
                        <Border Grid.Column="1">
                            <RadioButton Content="Закінчується на" Margin="5" 
                                      IsChecked="{Binding SearchType, 
                                      Converter={StaticResource SearchTypeToBoolConverter}, ConverterParameter=EndsWith}"
                                      GroupName="SearchMode"/>
                        </Border>
                        
                        <Border Grid.Column="2" BorderBrush="LightGray" BorderThickness="1,0">
                            <RadioButton Content="Містить" Margin="5" 
                                      IsChecked="{Binding SearchType, 
                                      Converter={StaticResource SearchTypeToBoolConverter}, ConverterParameter=Contains}"
                                      GroupName="SearchMode"/>
                            
                        </Border>
                        
                        <Button Style="{StaticResource WPFRoundedGlyphButtonStyle}" Grid.Column="3" HorizontalAlignment="Right" VerticalAlignment="Top"
                                Width="20" Height="20" Margin="0,0,0,5"
                                Background="Transparent" BorderThickness="0"
                                Cursor="Hand"
                                Command="{Binding CloseSearchPannelCommand}"
                                ToolTip="Закрити">
                            <Canvas Width="13" Height="13">
                                <Path Data="M1 1L11 11"
                                      Stroke="Black" StrokeThickness="1.5" StrokeDashCap="Round"/>
                                <Path Data="M1 11L11 1"
                                      Stroke="Black" StrokeThickness="1.5" StrokeDashCap="Round"/>
                            </Canvas>
                        </Button>
                        
                    </Grid>
                    
                    
                        <sf:SfTextInputLayout  Grid.Row="1" x:Name="searchTextBox"
                                               ContainerType="Filled"
                                               Margin="0,11,0,0" Hint="Введіть запит для пошуку"
                                               InputViewPadding="5,0">
                            <TextBox  Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                      BorderThickness="0" Height="35" FontSize="15" Background="Transparent">
                            
                                <i:Interaction.Triggers>
                                <i:EventTrigger EventName="TextChanged">
                                    <i:InvokeCommandAction Command="{Binding SearchTextChangedCommand}"
                                                           PassEventArgsToCommand="True"/>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                            
                        </TextBox>
                    </sf:SfTextInputLayout>
                    
                    <Grid Grid.Row="2" HorizontalAlignment="Right">
                        
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                            <Button Grid.Column="0" Margin="5"
                                    Command="{Binding SearchPreviousCommand}"
                                    Cursor="Hand" ToolTip="Назад">
                                
                                <Canvas Width="24" Height="24" HorizontalAlignment="Left">
                                    <Canvas.RenderTransform>
                                        <ScaleTransform ScaleX="1" ScaleY="1"/>
                                    </Canvas.RenderTransform>
                                    <Path Data="M1.293,12.707a1,1,0,0,1,0-1.414l6-6A1,1,0,0,1,8.707,6.707L4.414,11H22a1,1,0,0,1,0,2H4.414l4.293,4.293a1,1,0,0,1-1.414,1.414Z"
                                        Fill="Black"/>
                                
                            </Canvas>
                        </Button>
                        
                        <Button Grid.Column="1" Margin="5"
                                Command="{Binding SearchNextCommand}"
                                Cursor="Hand" ToolTip="Далі">
                            
                            <Canvas Width="24" Height="24" HorizontalAlignment="Right">
                                <Canvas.RenderTransform>
                                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                                </Canvas.RenderTransform>
                                <Path Data="M16.707,18.707a1,1,0,0,1-1.414-1.414L19.586,13H2a1,1,0,0,1,0-2H19.586L15.293,6.707a1,1,0,0,1,1.414-1.414l6,6a1,1,0,0,1,0,1.414Z"
                                      Fill="Black"/>
                            </Canvas>
                            
                        </Button>
                        
                        <Button Grid.Column="2" Margin="5"
                                Cursor="Hand"
                                Command="{Binding ClearSearchCommand}">
                            <TextBlock Text="Скинути"/>
                        </Button>
                    </Grid>
                </Grid>
                
            </Border>
        </Canvas>
        
        <Grid>
            <Rectangle Fill="Black"
                       Opacity="0.5"
                       Visibility="{Binding IsOverlayVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
                       Panel.ZIndex="1" />
        </Grid>
        
        <Border CornerRadius="8" Width="350" Height="120" Visibility="{Binding IsOverlayVisible, Converter={StaticResource BooleanToVisibilityConverter}}" Background="White">
            <Grid>
                <ContentControl prism:RegionManager.RegionName="DeletionAgreementRegion"/>
                <ContentControl prism:RegionManager.RegionName="WritOffFormRegion"/>
            </Grid>
        </Border>
    </Grid>
    
</UserControl>
