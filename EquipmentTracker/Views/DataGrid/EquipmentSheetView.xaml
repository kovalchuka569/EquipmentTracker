                                             AddNewRowPosition="Top"
                                             AddNewRowText="+ Додати нову запасну частину"
                                             NewItemPlaceholderPosition="AtBeginning"
                                             GridValidationMode="InEdit"
                                             AllowEditing="True"
                                             AllowDeleting="True"
                                             ShowBusyIndicator="True"
                                             GridLinesVisibility="Both"
                                             HeaderLinesVisibility="Both"
                                             ColumnSizer="Auto"
                                             SelectionMode="Single"
                                             LiveDataUpdateMode="AllowDataShaping"
                                             AutoGenerateColumns="False">
                                
                                    <grid:SfDataGrid.Columns>
                                    
                                    <!-- Name -->
                                    <grid:GridTextColumn MappingName="SparePartName" HeaderText="Назва" HeaderStyle="{StaticResource SparePartsHeadersStyle}" AllowFiltering="True" AllowGrouping="True">
                                        <grid:GridTextColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding SparePartNameDisplay}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                            </DataTemplate>
                                        </grid:GridTextColumn.CellTemplate>
                                    </grid:GridTextColumn>
                                    
                                    <!-- Category -->
                                    <grid:GridTextColumn MappingName="SparePartCategory" HeaderText="Категорія" HeaderStyle="{StaticResource SparePartsHeadersStyle}" AllowFiltering="True" AllowGrouping="True">
                                        <grid:GridTextColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding SparePartCategoryDisplay}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                            </DataTemplate>
                                        </grid:GridTextColumn.CellTemplate>
                                    </grid:GridTextColumn>
                                    
                                    <!-- Category -->
                                    <grid:GridTextColumn MappingName="SparePartSerialNumber" HeaderText="Серійний номер" HeaderStyle="{StaticResource SparePartsHeadersStyle}" AllowFiltering="True" AllowGrouping="False">
                                        <grid:GridTextColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding SparePartSerialNumberDisplay}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                            </DataTemplate>
                                        </grid:GridTextColumn.CellTemplate>
                                    </grid:GridTextColumn>
                                    
                                    <!-- Quantity -->
                                    <grid:GridNumericColumn MappingName="SparePartQuantity" HeaderText="Кількість" HeaderStyle="{StaticResource SparePartsHeadersStyle}" AllowFiltering="True" AllowGrouping="False">
                                        <grid:GridNumericColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding SparePartQuantityDisplay}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                            </DataTemplate>
                                        </grid:GridNumericColumn.CellTemplate>
                                    </grid:GridNumericColumn>
                                    
                                    <!-- Unit -->
                                    <grid:GridTextColumn MappingName="SparePartUnit" HeaderText="Одиниця" HeaderStyle="{StaticResource SparePartsHeadersStyle}" AllowFiltering="True" AllowGrouping="True">
                                        <grid:GridTextColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding SparePartUnitDisplay}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                            </DataTemplate>
                                        </grid:GridTextColumn.CellTemplate>
                                    </grid:GridTextColumn>
                                    
