<UserControl x:Class="EquipmentTracker.Views.DataGrid.EquipmentSheetView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             xmlns:converter="clr-namespace:Core.Services.EquipmentDataGrid;assembly=Core"
             xmlns:searchconverter="clr-namespace:EquipmentTracker.ViewModels.DataGrid"
             xmlns:grid="clr-namespace:Syncfusion.UI.Xaml.Grid;assembly=Syncfusion.SfGrid.WPF"
             xmlns:sf="http://schemas.syncfusion.com/wpf"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:syncfusionskin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
             syncfusionskin:SfSkinManager.Theme="{syncfusionskin:SkinManagerExtension ThemeName=Office2019Colorful}">
   
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Syncfusion.Themes.Office2019Colorful.WPF;component/sfdatagrid/sfdatagrid.xaml"/>
                <ResourceDictionary Source="/Syncfusion.Themes.Office2019Colorful.WPF;component/MSControl/glyphbutton.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <searchconverter:SearchHighlightConverter x:Key="SearchConverter"/>
            <searchconverter:SearchTypeEnumToBoolConverter x:Key="SearchTypeToBoolConverter"/>
            
            <Style x:Key="SparePartsHeadersStyle" TargetType="grid:GridHeaderCellControl" BasedOn="{StaticResource SyncfusionGridHeaderCellControlStyle}">
                <Setter Property="Background" Value="LightGray"/>  
                <Setter Property="FontWeight" Value="SemiBold"/>  
                <Setter Property="FontFamily" Value="Segoe UI"/>  
                <Setter Property="BorderBrush" Value="DarkGray"/>
            </Style>
            
                <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
            <converter:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Grid>
        
        <i:Interaction.Behaviors>
            <searchconverter:SizeChangedToViewModelBehavior 
                Width="{Binding ContainerWidth, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                Height="{Binding ContainerHeight, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
        </i:Interaction.Behaviors>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <ProgressBar Grid.Row="0" IsIndeterminate="True" IsEnabled="True" Visibility="{Binding ProgressBarVisibility, Converter={StaticResource BooleanToVisibilityConverter}}"/>
            
            <grid:SfDataGrid Grid.Row="1"
                             x:Name="equipmentDataGrid"
                            ItemsSource="{Binding Equipments}"
                            SelectedItem="{Binding SelectedEquipment}"
                             AllowFiltering="True"
                            ShowGroupDropArea="True"
                            ShowBusyIndicator="True"
                            SelectionMode="Single"
                            AutoGenerateRelations="False"
                            GridLinesVisibility="Both" HeaderLinesVisibility="Both"
                            GridValidationMode="InEdit"
                            AddNewRowPosition="Top"
                            NewItemPlaceholderPosition="AtBeginning"
                            ColumnSizer="Auto"
                            AddNewRowText="+ Додати нове обладнання"
                            AutoGenerateColumns="False"
                            LiveDataUpdateMode="AllowDataShaping">
            
                <grid:SfDataGrid.Columns>
                
                <!-- BASIC COLUMNS -->
                
                <!-- Inventory Number -->
                <grid:GridTextColumn MappingName="InventoryNumber" HeaderText="Інвентарний номер" 
                                     IsHidden="{Binding VisibleColumns[InventoryNumber], Converter={StaticResource InverseBooleanConverter}}" 
                                     AllowEditing="True" AllowFiltering="True" AllowGrouping="False">
                    <grid:GridTextColumn.CellTemplate>
                        <DataTemplate>
                            <ContentControl VerticalAlignment="Center" HorizontalAlignment="Center">
                                <ContentControl.Content>
                                    <MultiBinding Converter="{StaticResource SearchConverter}">
                                        <Binding Path="InventoryNumberDisplay"/>
                                        <Binding Path="SearchHelper.SearchText" 
                                                 RelativeSource="{RelativeSource AncestorType=grid:SfDataGrid}"/>
                                    </MultiBinding>
                                </ContentControl.Content>
                            </ContentControl>
                        </DataTemplate>
                    </grid:GridTextColumn.CellTemplate>
                </grid:GridTextColumn>
                
                <!-- Category -->
                <grid:GridTextColumn MappingName="Category" HeaderText="Категорія"  IsHidden="{Binding VisibleColumns[Category], Converter={StaticResource InverseBooleanConverter}}" AllowEditing="True" AllowFiltering="True" AllowGrouping="True">
                    <grid:GridTextColumn.CellTemplate>
                        <DataTemplate>
                            <ContentControl VerticalAlignment="Center" HorizontalAlignment="Center">
                                <ContentControl.Content>
                                    <MultiBinding Converter="{StaticResource SearchConverter}">
                                        <Binding Path="CategoryDisplay"/>
                                        <Binding Path="SearchHelper.SearchText" 
                                                 RelativeSource="{RelativeSource AncestorType=grid:SfDataGrid}"/>
                                    </MultiBinding>
                                </ContentControl.Content>
                            </ContentControl>                        
                        </DataTemplate>
                    </grid:GridTextColumn.CellTemplate>
                </grid:GridTextColumn>
                
                <!-- Brand -->
                <grid:GridTextColumn MappingName="Brand" HeaderText="Бренд" IsHidden="{Binding VisibleColumns[Brand], Converter={StaticResource InverseBooleanConverter}}" AllowEditing="True" AllowFiltering="True" AllowGrouping="True">
                    <grid:GridTextColumn.CellTemplate>
                        <DataTemplate>
                            <ContentControl VerticalAlignment="Center" HorizontalAlignment="Center">
                                <ContentControl.Content>
                                    <MultiBinding Converter="{StaticResource SearchConverter}">
                                        <Binding Path="BrandDisplay"/>
                                        <Binding Path="SearchHelper.SearchText" 
                                                 RelativeSource="{RelativeSource AncestorType=grid:SfDataGrid}"/>
                                    </MultiBinding>
                                </ContentControl.Content>
                            </ContentControl>
                        </DataTemplate>
                    </grid:GridTextColumn.CellTemplate>
                </grid:GridTextColumn>
                
                <!-- Model -->
                <grid:GridTextColumn MappingName="Model" HeaderText="Модель" IsHidden="{Binding VisibleColumns[Model], Converter={StaticResource InverseBooleanConverter}}" AllowEditing="True" AllowFiltering="True" AllowGrouping="True">
                    <grid:GridTextColumn.CellTemplate>
                        <DataTemplate>
                            <ContentControl VerticalAlignment="Center" HorizontalAlignment="Center">
                                <ContentControl.Content>
                                    <MultiBinding Converter="{StaticResource SearchConverter}">
                                        <Binding Path="ModelDisplay"/>
                                        <Binding Path="SearchHelper.SearchText" 
                                                 RelativeSource="{RelativeSource AncestorType=grid:SfDataGrid}"/>
                                    </MultiBinding>
                                </ContentControl.Content>
                            </ContentControl>
                        </DataTemplate>
                    </grid:GridTextColumn.CellTemplate>
                </grid:GridTextColumn>
                
                <!-- Serial Number -->
                <grid:GridTextColumn MappingName="SerialNumber" HeaderText="Серійний номер" IsHidden="{Binding VisibleColumns[SerialNumber], Converter={StaticResource InverseBooleanConverter}}" AllowEditing="True" AllowFiltering="True" AllowGrouping="False">
                    <grid:GridTextColumn.CellTemplate>
                        <DataTemplate>
                            <ContentControl VerticalAlignment="Center" HorizontalAlignment="Center">
                                <ContentControl.Content>
                                    <MultiBinding Converter="{StaticResource SearchConverter}">
                                        <Binding Path="SerialNumberDisplay"/>
                                        <Binding Path="SearchHelper.SearchText" 
                                                 RelativeSource="{RelativeSource AncestorType=grid:SfDataGrid}"/>
                                    </MultiBinding>
                                </ContentControl.Content>
                            </ContentControl>
                        </DataTemplate>
                    </grid:GridTextColumn.CellTemplate>
                </grid:GridTextColumn>
                
                <!-- Class -->
                <grid:GridTextColumn MappingName="Class" HeaderText="Клас" IsHidden="{Binding VisibleColumns[Class], Converter={StaticResource InverseBooleanConverter}}" AllowEditing="True" AllowFiltering="True" AllowGrouping="False">
                    <grid:GridTextColumn.CellTemplate>
                        <DataTemplate>
                            <ContentControl VerticalAlignment="Center" HorizontalAlignment="Center">
                                <ContentControl.Content>
                                    <MultiBinding Converter="{StaticResource SearchConverter}">
                                        <Binding Path="ClassDisplay"/>
                                        <Binding Path="SearchHelper.SearchText" 
                                                 RelativeSource="{RelativeSource AncestorType=grid:SfDataGrid}"/>
                                    </MultiBinding>
                                </ContentControl.Content>
                            </ContentControl>                       
                        </DataTemplate>
                    </grid:GridTextColumn.CellTemplate>
                </grid:GridTextColumn>
                
                <!-- Year -->
                <grid:GridTextColumn MappingName="Year" HeaderText="Рік" IsHidden="{Binding VisibleColumns[Year], Converter={StaticResource InverseBooleanConverter}}" AllowEditing="True" AllowFiltering="True" AllowGrouping="True">
                    <grid:GridTextColumn.CellTemplate>
                        <DataTemplate>
                            <ContentControl VerticalAlignment="Center" HorizontalAlignment="Center">
                                <ContentControl.Content>
                                    <MultiBinding Converter="{StaticResource SearchConverter}">
                                        <Binding Path="YearDisplay"/>
                                        <Binding Path="SearchHelper.SearchText" 
                                                 RelativeSource="{RelativeSource AncestorType=grid:SfDataGrid}"/>
                                    </MultiBinding>
                                </ContentControl.Content>
                            </ContentControl>
                        </DataTemplate>
                    </grid:GridTextColumn.CellTemplate>
                </grid:GridTextColumn>
                
                
                <!-- DIMENSIONS COLUMNS -->
                
                <!-- Height -->
                <grid:GridNumericColumn MappingName="Height" HeaderText="Висота (см)" IsHidden="{Binding VisibleColumns[Height], Converter={StaticResource InverseBooleanConverter}}" AllowEditing="True" AllowFiltering="True" AllowGrouping="False">
                    <grid:GridNumericColumn.CellTemplate>
                        <DataTemplate>
                            <ContentControl VerticalAlignment="Center" HorizontalAlignment="Center">
                                <ContentControl.Content>
                                    <MultiBinding Converter="{StaticResource SearchConverter}">
                                        <Binding Path="HeightDisplay"/>
                                        <Binding Path="SearchHelper.SearchText" 
                                                 RelativeSource="{RelativeSource AncestorType=grid:SfDataGrid}"/>
                                    </MultiBinding>
                                </ContentControl.Content>
                            </ContentControl>
                        </DataTemplate>
                    </grid:GridNumericColumn.CellTemplate>
                </grid:GridNumericColumn>
                
                <!-- Width -->
                <grid:GridNumericColumn MappingName="Width" HeaderText="Ширина (см)" IsHidden="{Binding VisibleColumns[Width], Converter={StaticResource InverseBooleanConverter}}" AllowEditing="True" AllowFiltering="True" AllowGrouping="False">
                    <grid:GridNumericColumn.CellTemplate>
                        <DataTemplate>
                            <ContentControl VerticalAlignment="Center" HorizontalAlignment="Center">
                                <ContentControl.Content>
                                    <MultiBinding Converter="{StaticResource SearchConverter}">
                                        <Binding Path="WidthDisplay"/>
                                        <Binding Path="SearchHelper.SearchText" 
                                                 RelativeSource="{RelativeSource AncestorType=grid:SfDataGrid}"/>
                                    </MultiBinding>
                                </ContentControl.Content>
                            </ContentControl>
                        </DataTemplate>
                    </grid:GridNumericColumn.CellTemplate>
                </grid:GridNumericColumn>
                
                <!-- Length -->
                <grid:GridNumericColumn MappingName="Length" HeaderText="Довжина (см)" IsHidden="{Binding VisibleColumns[Length], Converter={StaticResource InverseBooleanConverter}}" AllowEditing="True" AllowFiltering="True" AllowGrouping="False">
                    <grid:GridNumericColumn.CellTemplate>
                        <DataTemplate>
                            <ContentControl VerticalAlignment="Center" HorizontalAlignment="Center">
                                <ContentControl.Content>
                                    <MultiBinding Converter="{StaticResource SearchConverter}">
                                        <Binding Path="LenghtDisplay"/>
                                        <Binding Path="SearchHelper.SearchText" 
                                                 RelativeSource="{RelativeSource AncestorType=grid:SfDataGrid}"/>
                                    </MultiBinding>
                                </ContentControl.Content>
                            </ContentControl>
                        </DataTemplate>
                    </grid:GridNumericColumn.CellTemplate>
                </grid:GridNumericColumn>
                
                <!-- Weight -->
                <grid:GridNumericColumn MappingName="Weight" HeaderText="Вага (кг)" IsHidden="{Binding VisibleColumns[Weight], Converter={StaticResource InverseBooleanConverter}}" AllowEditing="True" AllowFiltering="True" AllowGrouping="False">
                    <grid:GridNumericColumn.CellTemplate>
                        <DataTemplate>
                            <ContentControl VerticalAlignment="Center" HorizontalAlignment="Center">
                                <ContentControl.Content>
                                    <MultiBinding Converter="{StaticResource SearchConverter}">
                                        <Binding Path="WeightDisplay"/>
                                        <Binding Path="SearchHelper.SearchText" 
                                                 RelativeSource="{RelativeSource AncestorType=grid:SfDataGrid}"/>
                                    </MultiBinding>
                                </ContentControl.Content>
                            </ContentControl>
                        </DataTemplate>
                    </grid:GridNumericColumn.CellTemplate>
                </grid:GridNumericColumn>
                
                
                <!-- LOCATION COLUMNS -->
                
                <!-- Floor -->
                <grid:GridTextColumn MappingName="Floor" HeaderText="Поверх" IsHidden="{Binding VisibleColumns[Floor], Converter={StaticResource InverseBooleanConverter}}" AllowEditing="True" AllowFiltering="True" AllowGrouping="True">
                    <grid:GridTextColumn.CellTemplate>
                        <DataTemplate>
                            <ContentControl VerticalAlignment="Center" HorizontalAlignment="Center">
                                <ContentControl.Content>
                                    <MultiBinding Converter="{StaticResource SearchConverter}">
                                        <Binding Path="FloorDisplay"/>
                                        <Binding Path="SearchHelper.SearchText" 
                                                 RelativeSource="{RelativeSource AncestorType=grid:SfDataGrid}"/>
                                    </MultiBinding>
                                </ContentControl.Content>
                            </ContentControl>
                        </DataTemplate>
                    </grid:GridTextColumn.CellTemplate>
                </grid:GridTextColumn>
                
                <!-- Department -->
                <grid:GridTextColumn MappingName="Department" HeaderText="Відділ" IsHidden="{Binding VisibleColumns[Department], Converter={StaticResource InverseBooleanConverter}}" AllowEditing="True" AllowFiltering="True" AllowGrouping="True">
                    <grid:GridTextColumn.CellTemplate>
                        <DataTemplate>
                            <ContentControl VerticalAlignment="Center" HorizontalAlignment="Center">
                                <ContentControl.Content>
                                    <MultiBinding Converter="{StaticResource SearchConverter}">
                                        <Binding Path="DepartmentDisplay"/>
                                        <Binding Path="SearchHelper.SearchText" 
                                                 RelativeSource="{RelativeSource AncestorType=grid:SfDataGrid}"/>
                                    </MultiBinding>
                                </ContentControl.Content>
                            </ContentControl>
                        </DataTemplate>
                    </grid:GridTextColumn.CellTemplate>
                </grid:GridTextColumn>
                
                <!-- Room -->
                <grid:GridTextColumn MappingName="Room" HeaderText="Кімната" IsHidden="{Binding VisibleColumns[Room], Converter={StaticResource InverseBooleanConverter}}" AllowEditing="True" AllowFiltering="True" AllowGrouping="True">
                    <grid:GridTextColumn.CellTemplate>
                        <DataTemplate>
                            <ContentControl VerticalAlignment="Center" HorizontalAlignment="Center">
                                <ContentControl.Content>
                                    <MultiBinding Converter="{StaticResource SearchConverter}">
                                        <Binding Path="RoomDisplay"/>
                                        <Binding Path="SearchHelper.SearchText" 
                                                 RelativeSource="{RelativeSource AncestorType=grid:SfDataGrid}"/>
                                    </MultiBinding>
                                </ContentControl.Content>
                            </ContentControl>
                        </DataTemplate>
                    </grid:GridTextColumn.CellTemplate>
                </grid:GridTextColumn>
                
                
                <!-- TECHNICAL COLUMNS -->
                
                <!-- Consumption -->
                <grid:GridNumericColumn MappingName="Consumption" IsHidden="{Binding VisibleColumns[Consumption], Converter={StaticResource InverseBooleanConverter}}" HeaderText="Споживанння (КВ/год)" AllowEditing="True" AllowFiltering="True" AllowGrouping="True">
                    <grid:GridNumericColumn.CellTemplate>
                        <DataTemplate>
                            <ContentControl VerticalAlignment="Center" HorizontalAlignment="Center">
                                <ContentControl.Content>
                                    <MultiBinding Converter="{StaticResource SearchConverter}">
                                        <Binding Path="ConsumptionDisplay"/>
                                        <Binding Path="SearchHelper.SearchText" 
                                                 RelativeSource="{RelativeSource AncestorType=grid:SfDataGrid}"/>
                                    </MultiBinding>
                                </ContentControl.Content>
                            </ContentControl>                       
                        </DataTemplate>
                    </grid:GridNumericColumn.CellTemplate>
                </grid:GridNumericColumn>
                
                <!-- Voltage -->
                <grid:GridNumericColumn MappingName="Voltage" HeaderText="Напруга (В)" IsHidden="{Binding VisibleColumns[Voltage], Converter={StaticResource InverseBooleanConverter}}" AllowEditing="True" AllowFiltering="True" AllowGrouping="True">
                    <grid:GridNumericColumn.CellTemplate>
                        <DataTemplate>
                            <ContentControl VerticalAlignment="Center" HorizontalAlignment="Center">
                                <ContentControl.Content>
                                    <MultiBinding Converter="{StaticResource SearchConverter}">
                                        <Binding Path="VoltageDisplay"/>
                                        <Binding Path="SearchHelper.SearchText" 
                                                 RelativeSource="{RelativeSource AncestorType=grid:SfDataGrid}"/>
                                    </MultiBinding>
                                </ContentControl.Content>
                            </ContentControl>
                        </DataTemplate>
                    </grid:GridNumericColumn.CellTemplate>
                </grid:GridNumericColumn>
                
                <!-- Water -->
                <grid:GridNumericColumn MappingName="Water" HeaderText="Вода (Л/год)" IsHidden="{Binding VisibleColumns[Water], Converter={StaticResource InverseBooleanConverter}}" AllowEditing="True" AllowFiltering="True" AllowGrouping="True">
                    <grid:GridNumericColumn.CellTemplate>
                        <DataTemplate>
                            <ContentControl VerticalAlignment="Center" HorizontalAlignment="Center">
                                <ContentControl.Content>
                                    <MultiBinding Converter="{StaticResource SearchConverter}">
                                        <Binding Path="WaterDisplay"/>
                                        <Binding Path="SearchHelper.SearchText" 
                                                 RelativeSource="{RelativeSource AncestorType=grid:SfDataGrid}"/>
                                    </MultiBinding>
                                </ContentControl.Content>
                            </ContentControl>
                        </DataTemplate>
                    </grid:GridNumericColumn.CellTemplate>
                </grid:GridNumericColumn>
                
                <!-- Air -->
                <grid:GridNumericColumn MappingName="Air" HeaderText="Повітря (Л/год)" IsHidden="{Binding VisibleColumns[Air], Converter={StaticResource InverseBooleanConverter}}" AllowEditing="True" AllowFiltering="True" AllowGrouping="True">
                    <grid:GridNumericColumn.CellTemplate>
                        <DataTemplate>
                            <ContentControl VerticalAlignment="Center" HorizontalAlignment="Center">
                                <ContentControl.Content>
                                    <MultiBinding Converter="{StaticResource SearchConverter}">
                                        <Binding Path="AirDisplay"/>
                                        <Binding Path="SearchHelper.SearchText" 
                                                 RelativeSource="{RelativeSource AncestorType=grid:SfDataGrid}"/>
                                    </MultiBinding>
                                </ContentControl.Content>
                            </ContentControl>
                        </DataTemplate>
                    </grid:GridNumericColumn.CellTemplate>
                </grid:GridNumericColumn>
                
                
                <!-- FINANCICAL COLUMNS -->
                
                <!-- Balance cost -->
                <grid:GridNumericColumn MappingName="BalanceCost" IsHidden="{Binding VisibleColumns[BalanceCost], Converter={StaticResource InverseBooleanConverter}}" HeaderText="Балансова вартість (грн)" AllowEditing="True" AllowFiltering="True" AllowGrouping="False">
                    <grid:GridNumericColumn.CellTemplate>
                        <DataTemplate>
                            <ContentControl VerticalAlignment="Center" HorizontalAlignment="Center">
                                <ContentControl.Content>
                                    <MultiBinding Converter="{StaticResource SearchConverter}">
                                        <Binding Path="BalanceCostDisplay"/>
                                        <Binding Path="SearchHelper.SearchText" 
                                                 RelativeSource="{RelativeSource AncestorType=grid:SfDataGrid}"/>
                                    </MultiBinding>
                                </ContentControl.Content>
                            </ContentControl>
                        </DataTemplate>
                    </grid:GridNumericColumn.CellTemplate>
                </grid:GridNumericColumn>
                
                <!-- ADDITIONALLY COLUMNS -->
                
                <!-- Notes -->
                <grid:GridTextColumn MappingName="Notes" HeaderText="Нотатки" IsHidden="{Binding VisibleColumns[Notes], Converter={StaticResource InverseBooleanConverter}}" AllowEditing="True" AllowFiltering="True" AllowGrouping="False">
                    <grid:GridTextColumn.CellTemplate>
                        <DataTemplate >
                            <ContentControl MaxWidth="300" Margin="4" VerticalAlignment="Center" HorizontalAlignment="Center">
                                <ContentControl.Content>
                                    <MultiBinding Converter="{StaticResource SearchConverter}">
                                        <Binding Path="NotesDisplay"/>
                                        <Binding Path="SearchHelper.SearchText"
                                                 RelativeSource="{RelativeSource AncestorType=grid:SfDataGrid}"/>
                                    </MultiBinding>
                                </ContentControl.Content>
                            </ContentControl>                        
                        </DataTemplate>
                    </grid:GridTextColumn.CellTemplate>
                </grid:GridTextColumn>
                
                <!-- Responsible person -->
                <grid:GridTextColumn MappingName="ResponsiblePerson" HeaderText="Відповідальний" IsHidden="{Binding VisibleColumns[ResponsiblePerson], Converter={StaticResource InverseBooleanConverter}}" AllowEditing="True" AllowFiltering="True" AllowGrouping="True">
                    <grid:GridTextColumn.CellTemplate>
                        <DataTemplate>
                            <ContentControl MaxWidth="300" Margin="4" VerticalAlignment="Center" HorizontalAlignment="Center">
                                <ContentControl.Content>
                                    <MultiBinding Converter="{StaticResource SearchConverter}">
                                        <Binding Path="ResponsiblePersonDisplay"/>
                                        <Binding Path="SearchHelper.SearchText"
                                                 RelativeSource="{RelativeSource AncestorType=grid:SfDataGrid}"/>
                                    </MultiBinding>
                                </ContentControl.Content>
                            </ContentControl>                        
                        </DataTemplate>
                    </grid:GridTextColumn.CellTemplate>
                </grid:GridTextColumn>
                
            </grid:SfDataGrid.Columns>
                
                
            <!-- STACKED HEADERS -->
            <grid:SfDataGrid.StackedHeaderRows>
                <grid:StackedHeaderRow>
                    <grid:StackedHeaderRow.StackedColumns>
                        <grid:StackedColumn ChildColumns="Floor,Department,Room" HeaderText="ЛОКАЦІЯ" MappingName="Location"/>
                        <grid:StackedColumn ChildColumns="Height,Width,Length,Weight" HeaderText="ГАБАРИТИ" MappingName="Dimesnions"/>
                        <grid:StackedColumn ChildColumns="Consumption,Voltage,Water,Air" HeaderText="ТЕХНІЧНІ ХАРАКТЕРИСТИКИ" MappingName="TechnicalCharacterisitics"/>
                    </grid:StackedHeaderRow.StackedColumns>
                </grid:StackedHeaderRow>
                
                <grid:StackedHeaderRow>
                    <grid:StackedHeaderRow.StackedColumns>
                        <grid:StackedColumn ChildColumns="Height,Width,Length" HeaderText="Розмір"/>
                    </grid:StackedHeaderRow.StackedColumns>
                </grid:StackedHeaderRow>
                
            </grid:SfDataGrid.StackedHeaderRows>
                
            
                <!-- CONTEXT MENU -->
            <grid:SfDataGrid.ContextMenu>
                <ContextMenu>
                    
                    <!-- Refresh -->
                    <MenuItem Command="{Binding RefreshCommand}" Cursor="Hand">
                        <MenuItem.HeaderTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions> 
                                    <Path Grid.Column="0" 
                                          Width="16" Height="16" 
                                          HorizontalAlignment="Left"
                                          Stretch="Uniform"
                                          Fill="Black"
                                          Data="M 20 4 C 14.507813 4 10 8.507813 10 14 L 10 31.75 L 7.125 28.875 L 4.3125 31.71875 L 12 39.40625 L 19.6875 31.71875 L 16.875 28.90625 L 14 31.75 L 14 14 C 14 10.691406 16.691406 8 20 8 L 31 8 L 31 4 Z M 38 10.59375 L 30.28125 18.3125 L 33.125 21.125 L 36 18.25 L 36 36 C 36 39.308594 33.308594 42 30 42 L 19 42 L 19 46 L 30 46 C 35.492188 46 40 41.492188 40 36 L 40 18.25 L 42.875 21.125 L 45.6875 18.28125 Z"/>
                                    <TextBlock Grid.Column="1" Text="Оновити" FontSize="14" Margin="6,0,0,0" HorizontalAlignment="Left"/>
                                </Grid>
                            </DataTemplate>
                        </MenuItem.HeaderTemplate>
                    </MenuItem>
                    
                    <!-- Search (open search pannel) -->
                    <MenuItem Command="{Binding OpenSearchPannelCommand}" Cursor="Hand">
                        <MenuItem.HeaderTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions> 
                                    <Path Grid.Column="0" 
                                          Width="16" Height="16" 
                                          HorizontalAlignment="Left"
                                          Stretch="Uniform"
                                          Fill="Black"
                                          Data="M 21 3 C 11.601563 3 4 10.601563 4 20 C 4 29.398438 11.601563 37 21 37 C 24.355469 37 27.460938 36.015625 30.09375 34.34375 L 42.375 46.625 L 46.625 42.375 L 34.5 30.28125 C 36.679688 27.421875 38 23.878906 38 20 C 38 10.601563 30.398438 3 21 3 Z M 21 7 C 28.199219 7 34 12.800781 34 20 C 34 27.199219 28.199219 33 21 33 C 13.800781 33 8 27.199219 8 20 C 8 12.800781 13.800781 7 21 7 Z"/>
                                    <TextBlock Grid.Column="1" Text="Пошук" FontSize="14" Margin="6,0,0,0" HorizontalAlignment="Left"/>
                                </Grid>
                            </DataTemplate>
                        </MenuItem.HeaderTemplate>
                    </MenuItem>
                    
                    <!-- Write off -->
                    <MenuItem Command="{Binding WriteOffCommand}" Cursor="Hand">
                        <MenuItem.HeaderTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions> 
                                    <Path Grid.Column="0" 
                                          Width="16" Height="16" 
                                          HorizontalAlignment="Left"
                                          Stretch="Uniform"
                                          Fill="Black"
                                          Data="M12.4722 8H16C18.2091 8 20 9.79086 20 12C20 14.2091 18.2091 16 16 16H12.4722C13.4223 14.9385 14 13.5367 14 12C14 10.4633 13.4223 9.06151 12.4722 8ZM8 8C5.79086 8 4 9.79086 4 12C4 14.2091 5.79086 16 8 16C10.2091 16 12 14.2091 12 12C12 9.79086 10.2091 8 8 8ZM8 6H16C19.3137 6 22 8.68629 22 12C22 15.3137 19.3137 18 16 18H8C4.68629 18 2 15.3137 2 12C2 8.68629 4.68629 6 8 6Z"/>
                                    <TextBlock Grid.Column="1" Text="Додати в списані" FontSize="14" Margin="6,0,0,0" HorizontalAlignment="Left"/>
                                </Grid>
                            </DataTemplate>
                        </MenuItem.HeaderTemplate>
                    </MenuItem>
                    
                    <!-- Print -->
                    <MenuItem Command="{Binding PrintCommand}" Cursor="Hand">
                        <MenuItem.HeaderTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions> 
                                    <Path Grid.Column="0" 
                                          Width="16" Height="16" 
                                          HorizontalAlignment="Left"
