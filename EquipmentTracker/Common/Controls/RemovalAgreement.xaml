<sf:ChromelessWindow x:Class="EquipmentTracker.Common.Controls.RemovalAgreement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:sf="http://schemas.syncfusion.com/wpf"
             mc:Ignorable="d"
             Style="{DynamicResource LoadSfChromelessWindowAnimationBottomToTop}"
             CornerRadius="8"
             BorderThickness="0"
             AllowsTransparency="True"
             Background="White"
             ShowInTaskbar="False"
             ShowActivated="True"
             ResizeBorderThickness="0"
             TitleBarHeight="45"
             WindowStartupLocation="CenterScreen"
             SizeToContent="WidthAndHeight">
    
    <sf:ChromelessWindow.TitleBarTemplate>
        <ControlTemplate>
            <Grid>
                <Image Source="Assets/attention.png" Margin="25,10,0,5" HorizontalAlignment="Left" Width="30" Height="30"/>
            </Grid>
        </ControlTemplate>
    </sf:ChromelessWindow.TitleBarTemplate>
    
        <sf:ChromelessWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Syncfusion.Themes.Windows11Light.WPF;component/mscontrol/button.xaml"/>
                <ResourceDictionary Source="/Syncfusion.Themes.Windows11Light.WPF;component/mscontrol/primarybutton.xaml"/>
                <ResourceDictionary Source="/Syncfusion.Themes.Windows11Light.WPF;component/mscontrol/glyphbutton.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Common/Styles/LoadAnimationStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            
        </ResourceDictionary>
    </sf:ChromelessWindow.Resources>
    
        <Border x:Name="RootBorder" RenderTransformOrigin="0.5,0.5" Background="White" BorderThickness="0" Padding="25,5,25,10" HorizontalAlignment="Center" VerticalAlignment="Center" >
            <Border.RenderTransform>
                <TranslateTransform Y="60"/>
            </Border.RenderTransform>
            
                <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <TextBlock Text="{Binding DeleteTitle}" Grid.Row="0" FontFamily="Segoe UI" FontWeight="SemiBold" FontSize="15" Foreground="Black" HorizontalAlignment="Left"/>
                
                <TextBlock Text="{Binding DeleteMessage}" Grid.Row="1" FontFamily="Segoe UI" FontWeight="SemiBold" FontSize="14" Foreground="Black" Opacity="0.7" Margin="0,5,0,0" HorizontalAlignment="Left" TextAlignment="Justify"/>
                
                <Grid Grid.Row="2" Margin="0,5,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <Button Command="{Binding CancelCommand}" Grid.Column="0" Cursor="Hand" HorizontalAlignment="Right" Margin="0,0,5,0" Style="{StaticResource WPFButtonStyle}">
                        <Button.ContentTemplate>
                           <DataTemplate>
                               <TextBlock Text="Відміна" Margin="3" FontFamily="Segoe UI" FontSize="14"/>
                           </DataTemplate> 
                        </Button.ContentTemplate>
                    </Button>
                    
                    <Button Command="{Binding DeleteCommand}" Grid.Column="1" Background="Red" Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource WPFButtonStyle}">
                                <Setter Property="Foreground" Value="White"/> 
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="White"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.ContentTemplate>
                            <DataTemplate>
                                <TextBlock Text="Так, видалити" Margin="3" FontFamily="Segoe UI" FontSize="14"/>
                            </DataTemplate> 
                        </Button.ContentTemplate>
                    </Button>
                    
                    </Grid>
                </Grid>
        </Border>
    
    <sf:ChromelessWindow.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation Storyboard.TargetName="RootBorder"
                                     Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                                     From="60" To="0"
                                     Duration="0:0:0.5">
                        <DoubleAnimation.EasingFunction>
                            <QuarticEase EasingMode="EaseOut"/>
                        </DoubleAnimation.EasingFunction>
                    </DoubleAnimation>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </sf:ChromelessWindow.Triggers>
    
</sf:ChromelessWindow>
