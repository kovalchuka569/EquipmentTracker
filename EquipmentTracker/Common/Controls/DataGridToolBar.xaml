<UserControl x:Class="EquipmentTracker.Common.Controls.DataGridToolBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:sf="http://schemas.syncfusion.com/wpf"
             xmlns:converters="clr-namespace:EquipmentTracker.Common.Converters"
             mc:Ignorable="d">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Syncfusion.Themes.Windows11Light.WPF;component/mscontrol/glyphbutton.xaml"/>
                <ResourceDictionary Source="/Syncfusion.Themes.Windows11Light.WPF;component/mscontrol/separator.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Common/Styles/LoadAnimationStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Border Background="#005aae" CornerRadius="4">
        <Grid VerticalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <sf:CustomPopup
                x:Name="SearchTypeSelectorPopup"
                   PlacementTarget="{Binding ElementName=SearchTypeSelectorButton}"
                   Placement="Right"
                   StaysOpen="False"
                   AllowsTransparency="True">
                <Border Background="White" CornerRadius="4">
                    <StackPanel Margin="15,5">
                        <RadioButton x:Name="ContainsSearchType" Checked="SearchType_OnChecked"  GroupName="SearchType" Content="Містить" FontFamily="Segoe UI" />
                        <RadioButton x:Name="StartWithSearchType" Checked="SearchType_OnChecked" GroupName="SearchType" Content="Починається з" FontFamily="Segoe UI" Margin="0,4"/>
                        <RadioButton x:Name="EndWithSearchType" Checked="SearchType_OnChecked" GroupName="SearchType" Content="Закінчується на" FontFamily="Segoe UI"/>
                    </StackPanel>
                </Border>
            </sf:CustomPopup>
            
            <sf:CustomPopup
                x:Name="ImportSelectorPopup"
                PlacementTarget="{Binding ElementName=ImportButton}"
                Placement="Left"
                StaysOpen="False"
                AllowsTransparency="True">
                <Border Background="White" CornerRadius="4">
                    <StackPanel Margin="15,5">
                        <Button Margin="0,0,0,7" Cursor="Hand" Click="ExcelImportButton_OnClick">
                            <Button.Template>
                                <ControlTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <Image Grid.Column="0"
                                               Source="Assets/excel.png"
                                               Width="15" Height="15"/>
                                        <TextBlock Grid.Column="1" Text="Іморт з Excel" FontFamily="Segoe UI"/>
                                    </Grid>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                </Border>
            </sf:CustomPopup>
            
            <sf:CustomPopup
                x:Name="ExportSelectorPopup"
                PlacementTarget="{Binding ElementName=ExportButton}"
                Placement="Left"
                StaysOpen="False"
                AllowsTransparency="True">
                <Border Background="White" CornerRadius="4">
                    <StackPanel Margin="15,5">
                        <Button Margin="0,0,0,7" Cursor="Hand" Click="ExcelExportButton_OnClick">
                            <Button.Template>
                                <ControlTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <Image Grid.Column="0"
                                               Source="Assets/excel.png"
                                               Width="15" Height="15"/>
                                        <TextBlock Grid.Column="1" Text="Експорт в Excel" FontFamily="Segoe UI"/>
                                    </Grid>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                        
                        <Button Cursor="Hand" Click="PdfExportButton_OnClick">
                            <Button.Template>
                                <ControlTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <Image Grid.Column="0"
                                               Source="Assets/pdf.png"
                                               Width="15" Height="15"/>
                                        <TextBlock Grid.Column="1" Text="Експорт в PDF" FontFamily="Segoe UI"/>
                                    </Grid>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                </Border>
            </sf:CustomPopup>
            
            <Image Grid.Column="0" Source="Assets/search.png" 
                   Width="15" 
                   Height="15" 
                   HorizontalAlignment="Left" 
                   VerticalAlignment="Center"
                   Margin="5"
                   IsHitTestVisible="False"/>
            
            <Separator Grid.Column="0" Style="{StaticResource WPFSeparatorStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Right" Width="1"/>

            
            <TextBox Grid.Column="1" x:Name="SearchTextBox" TextChanged="SearchTextBox_OnTextChanged" Width="300" FontFamily="Segoe UI" FontSize="14" VerticalAlignment="Stretch" Foreground="White">
                <TextBox.Template>
                    <ControlTemplate TargetType="TextBox">
                        <Grid Background="#005fb8">
                            <TextBlock x:Name="SearchWatermark" 
                                       Text="Пошук..." 
                                       Foreground="White"
                                       Margin="5,0"
                                       VerticalAlignment="Center"
                                       IsHitTestVisible="False"/>
                                    
                                    <ScrollViewer x:Name="PART_ContentHost" 
                                                  VerticalScrollBarVisibility="Hidden" 
                                                  HorizontalScrollBarVisibility="Hidden"
                                                  VerticalAlignment="Center"
                                                  Margin="4,0"/>
                        </Grid>
                    </ControlTemplate>
                </TextBox.Template>
            </TextBox>
            
            <Separator Grid.Column="2" Style="{StaticResource WPFSeparatorStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Left" Width="1"/>
            
            <Button Grid.Column="2" 
                    Click="ClearSearch_OnClick"
                    Width="30" Height="30"
                    VerticalAlignment="Center" HorizontalAlignment="Left"
                    Margin="5"
                    Cursor="Hand"
                    Style="{StaticResource WPFRoundedGlyphButtonStyle}">
                                
                <Image Source="Assets/clear.png" Width="15" Height="15"/>
            </Button>
            
            <Separator Grid.Column="3" Style="{StaticResource WPFSeparatorStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Left" Width="1"/>
            
            <Button Grid.Column="3" 
                    x:Name="SearchTypeSelectorButton"
                    Click="SearchSelector_OnClick"
                    Width="30" Height="30"
                    VerticalAlignment="Center" HorizontalAlignment="Left"
                    Margin="5"
                    Cursor="Hand"
                    Style="{StaticResource WPFRoundedGlyphButtonStyle}">
                                
                <Image Source="Assets/filter.png" Width="15" Height="15"/>
                
            </Button>
            
            
            <Separator Grid.Column="4" Style="{StaticResource WPFSeparatorStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Left" Width="1"/>
            
            <Button Grid.Column="4" 
                    x:Name="PreviousButton"
                    Click="NavigationButton_OnClick"
                    Width="30" Height="30"
                    VerticalAlignment="Center" HorizontalAlignment="Left"
                    Margin="5"
                    Cursor="Hand"
                    Style="{StaticResource WPFRoundedGlyphButtonStyle}">
                                
                <Image Source="Assets/left.png" Width="15" Height="15"/>
            </Button>
            
            <Separator Grid.Column="5" Style="{StaticResource WPFSeparatorStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Left" Width="1"/>
            
            <Button Grid.Column="5" 
                    x:Name="NextButton"
                    Click="NavigationButton_OnClick"
                    Width="30" Height="30"
                    VerticalAlignment="Center" HorizontalAlignment="Left"
                    Margin="5"
                    Cursor="Hand"
                    Style="{StaticResource WPFRoundedGlyphButtonStyle}">
                                
                <Image Source="Assets/right.png" Width="15" Height="15"/>
            </Button>
            
            <Separator Grid.Column="6" Style="{StaticResource WPFSeparatorStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Left" Width="1"/>

            <Grid Grid.Column="7" x:Name="ImportButton">
            <Separator Style="{StaticResource WPFSeparatorStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Left" Width="1"/>
            
            <Button Click="ImportButton_OnClick"
                    Width="30" Height="30"
                    VerticalAlignment="Center" HorizontalAlignment="Right"
                    Margin="5"
                    Cursor="Hand"
                    Style="{StaticResource WPFRoundedGlyphButtonStyle}">
                                
                <Image Source="Assets/import.png" Width="20" Height="20"/>
            </Button>
            </Grid>
            
            <Separator Grid.Column="8" Style="{StaticResource WPFSeparatorStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Left" Width="1"/>
            
            <Button Grid.Column="8" 
                    x:Name="ExportButton"
                    Click="ExportButton_OnClick"
                    Width="30" Height="30"
                    VerticalAlignment="Center" HorizontalAlignment="Right"
                    Margin="5"
                    Cursor="Hand"
                    Style="{StaticResource WPFRoundedGlyphButtonStyle}">
                                
                <Image Source="Assets/export.png" Width="20" Height="20"/>
            </Button>
            
            <Separator Grid.Column="9" Style="{StaticResource WPFSeparatorStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Left" Width="1"/>
            
            <Button Grid.Column="9" 
                    Click="PrintButton_OnClick"
                    Width="30" Height="30"
                    VerticalAlignment="Center" HorizontalAlignment="Right"
                    Margin="5"
                    Cursor="Hand"
                    Style="{StaticResource WPFGlyphButtonStyle}">
                                
                <Image Source="Assets/print.png" Width="20" Height="20"/>
            </Button>
            
        </Grid>
        </Border>
</UserControl>
