<UserControl x:Class="Controls.HoverButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:Common.Converters;assembly=Common"
             xmlns:enums="clr-namespace:Common.Enums;assembly=Common"
             Loaded="HoverButton_OnLoaded"
             SnapsToDevicePixels="True"
             x:Name="Root">

    <UserControl.Resources>
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <converters:StringNullOrEmptyToVisibilityConverter x:Key="StringNullOrEmptyToVisibilityConverter"/>
    </UserControl.Resources>

    <UserControl.Style>
        <Style TargetType="UserControl">
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.5"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Style>

    <Border x:Name="BorderElement"
            Width="{Binding ButtonWidth, ElementName=Root}"
            Height="{Binding ButtonHeight, ElementName=Root}">

        <Border.Style>
            <Style TargetType="Border">
                <Setter Property="CornerRadius" Value="{Binding ButtonCornerRadius, ElementName=Root}"/>
                <Setter Property="Background" Value="{Binding NormalBackground, ElementName=Root}"/>

                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="{Binding HoverBackground, ElementName=Root}"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
        </Border.Style>

        <Grid IsHitTestVisible="False"
              Margin="{Binding ContentPadding, ElementName=Root}"
              VerticalAlignment="Center" HorizontalAlignment="Center">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <Grid x:Name="IconContainer"
                  Visibility="{Binding NormalIconContent, Converter={StaticResource NullToVisibilityConverter}, ElementName=Root}"
                  UseLayoutRounding="True"
                  VerticalAlignment="Center"
                  HorizontalAlignment="Center">
                
                <Grid.Style>
                    <Style TargetType="Grid">
                        <Setter Property="Grid.Column" Value="0"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IconPosition, ElementName=Root}" Value="{x:Static enums:IconPosition.Right}">
                                <Setter Property="Grid.Column" Value="1"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Style>

                <Image x:Name="NormalIcon"
                       Width="{Binding NormalIconWidth, ElementName=Root}" 
                       Height="{Binding NormalIconHeight, ElementName=Root}"
                       Source="{Binding NormalIconContent, ElementName=Root}"  
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center"
                       Stretch="Uniform"/>

                <Image x:Name="HoverIcon"
                       Width="{Binding HoverIconWidth, ElementName=Root}" 
                       Height="{Binding HoverIconHeight, ElementName=Root}"
                       Source="{Binding HoverIconContent, ElementName=Root}" 
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center"
                       Stretch="Uniform"
                       Visibility="Collapsed"/>
            </Grid>
            
            <TextBlock x:Name="TextPresenter"
                       Text="{Binding TextContent, ElementName=Root}"
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center"
                       FontFamily="{Binding TextFontFamily, ElementName=Root}"
                       FontSize="{Binding TextFontSize, ElementName=Root}"
                       TextWrapping="NoWrap"
                       TextTrimming="CharacterEllipsis"
                       Visibility="{Binding TextContent, Converter={StaticResource StringNullOrEmptyToVisibilityConverter}, ElementName=Root}">
                
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="Grid.Column" Value="1"/>
                        <Setter Property="Margin" Value="5,0,0,0"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IconPosition, ElementName=Root}" Value="{x:Static enums:IconPosition.Right}">
                                <Setter Property="Grid.Column" Value="0"/>
                                <Setter Property="Margin" Value="0,0,5,0"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding NormalIconContent, ElementName=Root}" Value="{x:Null}">
                                <Setter Property="Margin" Value="0"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>

        </Grid>

    </Border>
</UserControl>