<UserControl x:Class="UI.Views.NavDrawer.NavDrawerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:UI.Views.NavDrawer"
             mc:Ignorable="d"
             xmlns:sf="http://schemas.syncfusion.com/wpf"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:syncfusionskin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
             syncfusionskin:SfSkinManager.Theme="{syncfusionskin:SkinManagerExtension ThemeName=Windows11Dark}"
             prism:ViewModelLocator.AutoWireViewModel="True">
    

        <Grid>
        <sf:SfNavigationDrawer x:Name="navDrawer"
                               Padding="0"
                               DisplayMode="Expanded" >
            <sf:SfNavigationDrawer.ToggleButtonContentTemplate>
                <DataTemplate>
                    <Label HorizontalAlignment="Center" VerticalAlignment="Center"
                           Content="Odyssey" Foreground="White" FontFamily="pack://application:,,,/Resources/Fonts/#Tylaco" FontSize="25" Margin="0,0,30,0"/>
                </DataTemplate>
            </sf:SfNavigationDrawer.ToggleButtonContentTemplate>

            <sf:SfNavigationDrawer.Items>
                
                <sf:NavigationItem ItemType="Separator"/>
                
                <sf:NavigationItem Header="Виробниче обладнання" FontSize="14" FontWeight="DemiBold"
                                   Command="{Binding NavigateToTabControlExt}" CommandParameter="Виробниче обладнання"
                                   Cursor="Hand" Height="40">
                    <sf:NavigationItem.Icon>
                        <Image Source="pack://application:,,,/Views/NavDrawer/Assets/prod_equipment.png" Width="25" Height="25"/>
                    </sf:NavigationItem.Icon>
                </sf:NavigationItem>
                
                <sf:NavigationItem ItemType="Separator"/>
                
                <sf:NavigationItem Header="Інструменти" FontSize="14" FontWeight="DemiBold"
                                   Command="{Binding NavigateToTabControlExt}" CommandParameter="Інструменти"
                                   Cursor="Hand" Height="40">
                    <sf:NavigationItem.Icon>
                        <Image Source="pack://application:,,,/Views/NavDrawer/Assets/tools.png" Width="25" Height="25"/>
                    </sf:NavigationItem.Icon>
                </sf:NavigationItem>
                
                <sf:NavigationItem ItemType="Separator"/>
                
                <sf:NavigationItem Header="Меблі" FontSize="14" FontWeight="DemiBold"
                                   Command="{Binding NavigateToTabControlExt}" CommandParameter="Меблі"
                                   Cursor="Hand" Height="40">
                    <sf:NavigationItem.Icon>
                        <Image Source="pack://application:,,,/Views/NavDrawer/Assets/furniture.png" Width="25" Height="25"/>
                    </sf:NavigationItem.Icon>
                </sf:NavigationItem>
                
                <sf:NavigationItem ItemType="Separator"/>
                
                <sf:NavigationItem Header="Офісна техніка" FontSize="14" FontWeight="DemiBold"
                                   Command="{Binding NavigateToTabControlExt}" CommandParameter="Офісна техніка"
                                   Cursor="Hand" Height="40">
                    <sf:NavigationItem.Icon>
                        <Image Source="pack://application:,,,/Views/NavDrawer/Assets/office_technique.png" Width="25" Height="25"/>
                    </sf:NavigationItem.Icon>
                </sf:NavigationItem>
                
                <sf:NavigationItem ItemType="Separator"/>
                
                <sf:NavigationItem Header="Розхідні матеріали" FontSize="14" FontWeight="DemiBold"
                                   Command="{Binding NavigateToTabControlExt}" CommandParameter="Розхідні матеріали"
                                   Cursor="Hand" Height="40">
                    <sf:NavigationItem.Icon>
                        <Image Source="pack://application:,,,/Views/NavDrawer/Assets/consumables.png" Width="25" Height="25"/>
                    </sf:NavigationItem.Icon>
                </sf:NavigationItem>
                
                <sf:NavigationItem ItemType="Separator"/>
                
                <sf:NavigationItem Header="Облік" FontSize="14" FontWeight="DemiBold"
                                   Command="{Binding NavigateToTabControlExt}"  CommandParameter="Облік"
                                   Cursor="Hand" Height="40">
                    <sf:NavigationItem.Icon>
                        <Image Source="pack://application:,,,/Views/NavDrawer/Assets/accounting.png" Width="25" Height="25"/>
                    </sf:NavigationItem.Icon>
                </sf:NavigationItem>
                
                <sf:NavigationItem ItemType="Separator"/>
                
            </sf:SfNavigationDrawer.Items>
            
            
            <sf:SfNavigationDrawer.FooterItems>
                
                <sf:NavigationItem ItemType="Separator"/>
                
                <sf:NavigationItem Header="Календар" FontSize="14" FontWeight="DemiBold"
                                   Command="{Binding NavigateToTabControlExt}" CommandParameter="Календар"
                                   Cursor="Hand" Height="40">
                    <sf:NavigationItem.Icon>
                        <Image Source="pack://application:,,,/Views/NavDrawer/Assets/scheduler.png" Width="25" Height="25"/>
                    </sf:NavigationItem.Icon>
                </sf:NavigationItem>
                
                <sf:NavigationItem ItemType="Separator" />
                
                <sf:NavigationItem Header="Налаштування" FontSize="14" FontWeight="DemiBold"
                                   Command="{Binding NavigateToTabControlExt}" CommandParameter="Налаштування"
                                   Cursor="Hand" Margin="0,0,0,10" >
                    <sf:NavigationItem.Icon>
                        <Image Source="pack://application:,,,/Views/NavDrawer/Assets/settings.png" Width="25" Height="25"/>
                    </sf:NavigationItem.Icon>
                </sf:NavigationItem>
                
            </sf:SfNavigationDrawer.FooterItems>

            <sf:SfNavigationDrawer.ContentView>
                    <ContentControl Margin="0,1,0,0" x:Name="cc" prism:RegionManager.RegionName="ContentRegion"/>
            </sf:SfNavigationDrawer.ContentView>

        </sf:SfNavigationDrawer>
        
       
    </Grid>
</UserControl>
