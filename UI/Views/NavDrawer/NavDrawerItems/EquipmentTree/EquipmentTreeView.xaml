<UserControl x:Class="UI.Views.NavDrawer.NavDrawerItems.EquipmentTree.EquipmentTreeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:sf="http://schemas.syncfusion.com/wpf"
             xmlns:models="clr-namespace:Core.Models.Tabs.EquipmentTree;assembly=Core" 
             mc:Ignorable="d"
             xmlns:viewModels="clr-namespace:UI.ViewModels.EquipmentTree"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:behavior="clr-namespace:Core.Behaviors.SyncfusionTreeView;assembly=Core"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:syncfusionskin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
             syncfusionskin:SfSkinManager.Theme="{syncfusionskin:SkinManagerExtension ThemeName=Windows11Light}">
    
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <x:Static x:Key="ColumnSelectorRegionNameSource" Member="viewModels:EquipmentTreeViewModel.ColumnSelectorRegionName" />
    </UserControl.Resources>
    <Grid>
        
        <sf:SfTreeView 
            x:Name="treeView"
            VerticalAlignment="Top" HorizontalAlignment="Left"
            BorderThickness="1"
            FocusVisualStyle="{x:Null}"
            IsAnimationEnabled="True"
            AllowEditing="True"
            EditTrigger="F2"
            ShowLines="True"
            ShowRootLines="True"
            AllowDeleting="True"
            SelectionMode="SingleDeselect"
            ItemsSource="{Binding Folders}"
            SelectedItem="{Binding SelectedItem, Mode=TwoWay}">
            
            <i:Interaction.Behaviors>
                <behavior:SfTreeViewEditBehavior ItemBeginEditCommand="{Binding ItemBeginEditCommand}"
                                                 ItemEndEditCommand="{Binding ItemEndEditCommand}"/>
            </i:Interaction.Behaviors>
            
            
            <sf:SfTreeView.HierarchyPropertyDescriptors>
                <sf:HierarchyPropertyDescriptor ChildPropertyName="Items" TargetType="{x:Type models:Folder}"/>
            </sf:SfTreeView.HierarchyPropertyDescriptors>
            
            
            
            <sf:SfTreeView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        
                        <Image
                            Width="20"  
                            Height="20"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            Source="{Binding ImageIcon}" />
                        
                        <TextBlock VerticalAlignment="Center"
                                   FontSize="15"
                                   Grid.Column="1"
                                   Padding="5 5"
                                   Text="{Binding FileName, UpdateSourceTrigger=PropertyChanged}"/>
                        
                    </Grid>
                </DataTemplate>
            </sf:SfTreeView.ItemTemplate>
            
           
            
            <sf:SfTreeView.EditTemplate>
                <DataTemplate>
                    
                    <TextBox Text="{Binding FileName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                             FontSize="13"/>
                    
                </DataTemplate>
            </sf:SfTreeView.EditTemplate>
            
                <sf:SfTreeView.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Відкрити"
                                  Command="{Binding OpenFileCommand}"/>
                        
                        <MenuItem Header="Створити">
                            <MenuItem Header="Створити нову категорію"
                                      Command="{Binding AddCategoryCommand}"
                                      Visibility="Visible"/>
                            <MenuItem Header="Створити таблицю"
                                      Command="{Binding AddFileCommand}"
                                      Visibility="Visible"/>
                        </MenuItem>
                        
                        <MenuItem Header="Редагувати"
                                  Command="{Binding EditCommand}"
                                  Visibility="{Binding CanEdit, Converter={StaticResource BoolToVisibilityConverter}}"/>
                        
                    </ContextMenu>
                </sf:SfTreeView.ContextMenu>
            
        </sf:SfTreeView>
        
        <Grid Visibility="{Binding ColumnSelectorVisibility, Converter={StaticResource BoolToVisibilityConverter}}" Background="#80000000">
        
        
        <ContentControl prism:RegionManager.RegionName="{StaticResource ColumnSelectorRegionNameSource}"
                        VerticalAlignment="Center" HorizontalAlignment="Center"/>
        
        </Grid>
        
    </Grid>
    
</UserControl>
