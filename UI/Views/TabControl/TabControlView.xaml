<UserControl x:Class="UI.Views.TabControl.TabControlView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             xmlns:sf="http://schemas.syncfusion.com/wpf"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:syncfusionskin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
             syncfusionskin:SfSkinManager.Theme="{syncfusionskin:SkinManagerExtension ThemeName=Windows11Dark}"
             prism:ViewModelLocator.AutoWireViewModel="True">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Syncfusion.Themes.Windows11Dark.WPF;component/tabcontrolext/tabcontrolext.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Grid>
        
        <sf:TabControlExt 
            x:Name="TabControl"
            Padding="0"
            prism:RegionManager.RegionName="TabControlRegion"
            CloseButtonType="IndividualOnMouseOver"
            TabItemHeaderStyle="Curve"
            EnableLabelEdit="False"
            DefaultContextMenuItemVisibility="Collapsed"
            IsCustomTabItemContextMenuEnabled="True"
            AllowDragDrop="True">
            
            <sf:TabControlExt.ItemContainerStyle>
                <Style TargetType="sf:TabItemExt" BasedOn="{StaticResource SyncfusionTabItemExtStyle}">
                    <Setter Property="ContextMenu">
                        <Setter.Value>
                            <ContextMenu>
                                <MenuItem Header="Закрити" 
                                          Command="{Binding CloseSelectedTabCommand}"
                                          CommandParameter="{Binding PlacementTarget, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                                <MenuItem Header="Закрити всі" 
                                          Command="{Binding CloseAllTabsCommand}"/>
                                <MenuItem Header="Закрити всі крім цієї" 
                                          Command="{Binding CloseOtherTabsCommand}"
                                          CommandParameter="{Binding PlacementTarget, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                            </ContextMenu>
                        </Setter.Value>
                    </Setter>
                </Style>
            </sf:TabControlExt.ItemContainerStyle>
        </sf:TabControlExt>
        
    </Grid>
</UserControl>
