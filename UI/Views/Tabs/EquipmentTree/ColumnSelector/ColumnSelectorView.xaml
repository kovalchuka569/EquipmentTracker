<UserControl x:Class="UI.Views.Tabs.EquipmentTree.ColumnSelector.ColumnSelectorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:UI.Views.Tabs.EquipmentTree.ColumnSelector"
             xmlns:sf="http://schemas.syncfusion.com/wpf"
             mc:Ignorable="d"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:syncfusionskin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
             syncfusionskin:SfSkinManager.Theme="{syncfusionskin:SkinManagerExtension ThemeName=Windows11Light}"
             prism:ViewModelLocator.AutoWireViewModel="True">
    
    <!--Resources-->
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Syncfusion.Themes.Windows11Light.WPF;component/MSControl/GlyphButton.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    
    
    <Grid Width="300" Height="800" Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Close column selector -->
        <Button Style="{StaticResource WPFRoundedGlyphButtonStyle}"
                Grid.Row="0"
                Cursor="Hand"
                Width="30" Height="30" VerticalAlignment="Bottom" HorizontalAlignment="Right">
            <Image Source="Assets/close.png" 
                   Width="20" Height="20"
                   VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="Click">
                    <i:InvokeCommandAction Command="{Binding CancelCommand}"/>
                </i:EventTrigger>
            </i:Interaction.Triggers>
                
        </Button>
        
        <TextBlock Grid.Row="1" 
                   Text="Вибір колонок" 
                   Foreground="White"
                   FontSize="16" 
                   FontWeight="Bold" 
                   Margin="5,5,5,10" 
                   HorizontalAlignment="Center"/>
        
            <sf:CheckListBox
                ItemsSource = "{Binding Columns}" SelectedItems = "{Binding SelectedColumns}"
                DisplayMemberPath="ColumnName" Name="checkListBox"
                IsSelectAllEnabled="False"
                Grid.Row="2"
                BorderThickness="1" BorderBrush="LightGray"
                Background="White">
                
                
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="Loaded">
                        <i:InvokeCommandAction Command="{Binding LoadedCommand}" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
                
            </sf:CheckListBox>
        
        <Button Grid.Row="3" 
                Content="Створити таблицю" 
                Foreground="White" 
                Background="Blue"
                Command="{Binding CreateTableCommand}" 
                Height="40"
                Margin="5"/>
    </Grid>
</UserControl>
