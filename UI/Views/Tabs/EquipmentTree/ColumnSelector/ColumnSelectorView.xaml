<UserControl x:Class="UI.Views.Tabs.EquipmentTree.ColumnSelector.ColumnSelectorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:UI.Views.Tabs.EquipmentTree.ColumnSelector"
             xmlns:sf="http://schemas.syncfusion.com/wpf"
             mc:Ignorable="d"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True">
    
    
    <Grid Width="300" Height="800" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" 
                   Text="Вибір колонок" 
                   FontSize="16" 
                   FontWeight="Bold" 
                   Margin="5,5,5,10" 
                   HorizontalAlignment="Center"/>
        
        <Border Grid.Row="1" BorderThickness="1" BorderBrush="Gray" CornerRadius="5">
            <sf:CheckListBox
                ItemsSource = "{Binding Columns}" SelectedItems = "{Binding SelectedColumns}"
                DisplayMemberPath="ColumnName" Name="checkListBox"
                IsSelectAllEnabled="False">
                
                
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="Loaded">
                        <i:InvokeCommandAction Command="{Binding LoadedCommand}" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
                
            </sf:CheckListBox>
        </Border>
        
        <Button Grid.Row="2" 
                Content="Створити таблицю" 
                Foreground="White" 
                Background="Blue"
                Command="{Binding CreateTableCommand}" 
                Height="40"
                Margin="5"/>
    </Grid>
</UserControl>
