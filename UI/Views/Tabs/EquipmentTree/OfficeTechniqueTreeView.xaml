<UserControl x:Class="UI.Views.Tabs.EquipmentTree.OfficeTechniqueTreeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:UI.Views.Tabs.EquipmentTree"
             mc:Ignorable="d"
             xmlns:sf="http://schemas.syncfusion.com/wpf"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:models="clr-namespace:Core.Models.Tabs.ProductionEquipmentTree;assembly=Core"  
             xmlns:behavior="clr-namespace:Core.Behaviors.SyncfusionTreeView;assembly=Core"
             xmlns:prism="http://prismlibrary.com/"
             d:DesignHeight="300" d:DesignWidth="300">
   <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </UserControl.Resources>
    <Grid>
        <sf:SfTreeView 
            x:Name="treeView"
            VerticalAlignment="Top" HorizontalAlignment="Left"
            BorderThickness="1"
            FocusVisualStyle="{x:Null}"
            IsAnimationEnabled="True"
            AllowEditing="True"
            EditTrigger="F2"
            ShowLines="True"
            AllowDeleting="True"
            SelectionMode="SingleDeselect"
            ItemsSource="{Binding Folders}"
            SelectedItem="{Binding SelectedFolder, Mode=TwoWay}">
            
            <i:Interaction.Behaviors>
                <behavior:SfTreeViewEditBehavior ItemBeginEditCommand="{Binding ItemBeginEditCommand}"
                                                 ItemEndEditCommand="{Binding ItemEndEditCommand}"/>
            </i:Interaction.Behaviors>
            
            <i:Interaction.Triggers>
                
                
                <i:EventTrigger EventName="ItemDoubleTapped">
                    <prism:InvokeCommandAction Command="{Binding OpenFileCommand}" CommandParameter="{Binding SelectedItem, ElementName=treeView}" />
                </i:EventTrigger>
                
            </i:Interaction.Triggers>
            
            
            <sf:SfTreeView.HierarchyPropertyDescriptors>
                <sf:HierarchyPropertyDescriptor ChildPropertyName="Items" TargetType="{x:Type models:Folder}"/>
            </sf:SfTreeView.HierarchyPropertyDescriptors>
            
            <sf:SfTreeView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        
                        <Image
                            Width="20"  
                            Height="20"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            Source="{Binding ImageIcon}" />
                        
                        <TextBlock VerticalAlignment="Center"
                                   FontSize="15"
                                   Grid.Column="1"
                                   Padding="5 5"
                                   Text="{Binding FileName}">
                            <TextBlock.InputBindings>
                                <MouseBinding Gesture="LeftDoubleClick" Command="{Binding OpenFileCommand}"/>
                            </TextBlock.InputBindings>
                        </TextBlock>
                        
                    </Grid>
                </DataTemplate>
            </sf:SfTreeView.ItemTemplate>
            
           
            
            <sf:SfTreeView.EditTemplate>
                <DataTemplate>
                    
                    <TextBox Text="{Binding FileName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                             FontSize="13"/>
                    
                </DataTemplate>
            </sf:SfTreeView.EditTemplate>
            
                <sf:SfTreeView.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Створити">
                            <MenuItem Header="Створити нову категорію"
                                      Command="{Binding AddCategoryCommand}"
                                      Visibility="Visible"/>
                            <MenuItem Header="Створити таблицю"
                                      Command="{Binding AddFileCommand}"
                                      Visibility="Visible"/>
                        </MenuItem>
                        
                        <MenuItem Header="Редагувати"
                                  Command="{Binding EditCommand}"
                                  Visibility="{Binding CanEdit, Converter={StaticResource BoolToVisibilityConverter}}"/>
                        
                    </ContextMenu>
                </sf:SfTreeView.ContextMenu>
            
        </sf:SfTreeView>
        
    </Grid>
</UserControl>
