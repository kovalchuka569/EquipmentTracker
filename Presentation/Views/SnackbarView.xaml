<UserControl x:Class="Presentation.Views.SnackbarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             x:Name="Root">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Resources;component/ModuleResources/SnackbarView.Resources.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <ItemsControl
        BorderThickness="1"
        ItemsSource="{Binding ActiveSnacks}"
        Margin="0,0,6,12"
        ItemTemplate="{StaticResource TextSnackTemplate}"
        VerticalAlignment="Bottom"
        HorizontalAlignment="Right">

        <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
                <StackPanel HorizontalAlignment="Right" />
            </ItemsPanelTemplate>
        </ItemsControl.ItemsPanel>

        <ItemsControl.ItemContainerStyle>
            <Style>
                <Setter Property="FrameworkElement.HorizontalAlignment" Value="Right" />
            </Style>
        </ItemsControl.ItemContainerStyle>

    </ItemsControl>

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding SnackbarLoadedCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

</UserControl>