<UserControl x:Class="Presentation.Views.ExcelImportConfiguratorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:sf="http://schemas.syncfusion.com/wpf"
             xmlns:controls="clr-namespace:Presentation.Controls"
             mc:Ignorable="d"
             Style="{DynamicResource LoadUserControlAnimationBottomToTop}"
             Loaded="ExcelImportConfiguratorView_OnLoaded">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Syncfusion.Themes.Windows11Light.WPF;component/MSControl/ScrollViewer.xaml"/>
                <ResourceDictionary Source="/Syncfusion.Themes.Windows11Light.WPF;component/MSControl/PrimaryButton.xaml"/>
                <ResourceDictionary Source="/Syncfusion.Themes.Windows11Light.WPF;component/IntegerTextBox/IntegerTextBox.xaml"/>
                <ResourceDictionary Source="/Syncfusion.Themes.Windows11Light.WPF;component/SfTextBoxExt/SfTextBoxExt.xaml"/>
                <ResourceDictionary Source="/Syncfusion.Themes.Windows11Light.WPF;component/CheckListBox/CheckListBox.xaml"/>
                <ResourceDictionary Source="/Syncfusion.Themes.Windows11Light.WPF;component/MSControl/ListView.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Presentation;component/Resources/Icons/Icons.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Presentation;component/Styles/Animations/LoadUserControlAnimationBottomToTop.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
            
            <sf:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>
            
            <ControlTemplate x:Key="ErrorTemplate">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <Border Grid.Row="0"    
                            BorderBrush="Red"
                            BorderThickness="1"
                            CornerRadius="4">
                        <AdornedElementPlaceholder x:Name="adornedElement"/>
                    </Border>
                    
                    <Border Grid.Row="1" Background="Red" CornerRadius="4" Margin="0,2,0,0" Padding="5"
                            MaxWidth="{Binding ActualWidth, ElementName=adornedElement}">
                        
                        <TextBlock Text="{Binding [0].ErrorContent}" 
                                   TextWrapping="Wrap" TextTrimming="CharacterEllipsis" Foreground="White" FontSize="10"/>
                    </Border>
                </Grid>
            </ControlTemplate>
            
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Border CornerRadius="8" BorderThickness="1" Background="White" Padding="24">
        <Grid>
            <!-- Close button -->
            <controls:HoverButton 
                                  NormalIconContent="{StaticResource CloseBlackLine32}"
                                  HoverIconContent="{StaticResource CloseLightLine32}"
                                  VerticalAlignment="Top" HorizontalAlignment="Right"
                                  ButtonCornerRadius="0,8,0,0"
                                  Margin="0,-24,-24,0"
                                  NormalIconHeight="16"
                                  NormalIconWidth="16"
                                  HoverIconHeight="16"
                                  HoverIconWidth="16"
                                  ContentPadding="6"
                                  NormalBackground="#E8E8E8"
                                  HoverBackground="Red"
                                  ChangeIconHover="True"
                                  ToolTip="Закрити">
                    
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="MouseLeftButtonUp">
                        <i:InvokeCommandAction Command="{Binding CancelDialogCommand}"/>
                    </i:EventTrigger>
                </i:Interaction.Triggers>
                    
            </controls:HoverButton>
            
            <StackPanel Margin="0,15,0,0">
                <TextBlock 
                           Text="Налаштування імпорту з Excel" 
                           VerticalAlignment="Center" HorizontalAlignment="Center" 
                           FontSize="14"
                           FontWeight="Black"
                           FontFamily="Microsoft Sans Serif"/>
                
                <StackPanel Orientation="Horizontal" Margin="0,6">
                    
                            
                            <Border CornerRadius="6" 
                                    BorderBrush="LightGray" BorderThickness="1"
                                    Margin="0,0,10,0"
                                    Width="200"
                                    MaxWidth="200">
                                
                                <TextBlock 
                                    Text="{Binding FilePath}" 
                                    FontFamily="Microsoft Sans Serif" FontSize="12"
                                    TextTrimming="CharacterEllipsis"
                                    VerticalAlignment="Center"
                                    ToolTip="{Binding FilePath}"/>
                                
                            </Border>
                    
                    <Grid>
                    
                        <controls:HoverButton 
                            NormalIconContent="{StaticResource FolderClosedLightLine32}"
                            HoverIconContent="{StaticResource FolderOpenedDarkLine64}"
                            NormalIconHeight="16"
                            NormalIconWidth="16"
                            HoverIconHeight="16"
                            HoverIconWidth="16"
                            ButtonWidth="100" ButtonHeight="26"
                            HorizontalAlignment="Left"
                            NormalBackground="#09244B"
                            HoverBackground="#E8E8E8"
                            ContentFill="White"
                            HoverContentFill="#09244B"
                            ChangeIconHover="True"
                            TextContent="Excel файл"
                            ToolTip="Вибір файлу Excel"
                            Visibility="{Binding FilePathBusyIndicatorVisibility, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                    
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="MouseLeftButtonUp">
                                    <i:InvokeCommandAction Command="{Binding BrowseFileCommand}"/>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                    
                        </controls:HoverButton>
                    
                        <sf:SfBusyIndicator 
                                        VerticalAlignment="Center" HorizontalAlignment="Center"
                                        Margin="10,0,0,0"
                                        ViewboxWidth="25" ViewboxHeight="25"
                                        AnimationType="Cupertino"
                                        Visibility="{Binding FilePathBusyIndicatorVisibility, Converter={StaticResource BooleanToVisibilityConverter}}"
                                        Foreground="#09244B"/>
                    
                    </Grid>
                    
                </StackPanel>
                
                <TextBlock HorizontalAlignment="Left" 
                           Text="Вибір Excel листа" 
                           FontFamily="Microsoft Sans Serif" FontSize="12" FontWeight="Black"
                           Margin="0,15,0,5"/>
                
                <Border BorderBrush="LightGray" CornerRadius="6" BorderThickness="1" Margin="0,6,0,15">
                    <ScrollViewer Width="300" MaxWidth="300" Height="450" MaxHeight="450" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                        <Grid>
                            <ListView
                                ItemsSource="{Binding Sheets}"
                                SelectedItem="{Binding SelectedSheet, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                FontFamily="Microsoft Sans Serif">
                                
                                    <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="SelectionChanged">
                                        <i:InvokeCommandAction Command="{Binding SheetSelectionChangedCommand}"/>
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                                    
                            </ListView>
                            
                            <TextBlock Text="Листи відсутні" 
                                       Visibility="{Binding NoSheetsTipVisibility, Converter={StaticResource BooleanToVisibilityConverter}}"
                                       Foreground="Gray"
                                       FontFamily="Microsoft Sans Serif" FontSize="12"
                                       VerticalAlignment="Center" HorizontalAlignment="Center"
                                       Margin="10,5,10,10"/>
                        </Grid>
                        
                    </ScrollViewer>
                </Border>
                
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
                    <StackPanel Margin="0,0,15,0">
                        <TextBlock Text="Діапазон заголовків" FontFamily="Microsoft Sans Serif" FontSize="12" Margin="0,0,0,5"/>
                        <sf:SfTextBoxExt Text="{Binding HeaderRangeString, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                                         Height="25" BorderBrush="#09244B" SelectionBrush="#09244B" FontFamily="Microsoft Sans Serif" FontSize="13"
                                         VerticalContentAlignment="Center" HorizontalAlignment="Center"
                                         Width="100"
                                         MaxWidth="100"
                                         ToolTip="Початкова та кінцева комірка зчитування рядка заголовків">
                            
                            <Validation.ErrorTemplate>
                                <StaticResource ResourceKey="ErrorTemplate"/>
                            </Validation.ErrorTemplate>
                            
                        </sf:SfTextBoxExt>
                    </StackPanel>
                    
                    <StackPanel ToolTip="Діапазон зчитування рядків">
                        <TextBlock HorizontalAlignment="Center" Text="Діапазон рядків" FontFamily="Microsoft Sans Serif" FontSize="12" Margin="0,0,0,5"/>
                        <StackPanel Orientation="Horizontal">
                            <sf:IntegerTextBox 
                                Value="{Binding RowRangeStart, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                                NullValue="{x:Null}"
                                UseNullOption="True"
                                IsNull="True"
                                VerticalAlignment="Center" 
                                MinValue="1"
                                Height="25" Width="100"
                                BorderBrush="#09244B" SelectionBrush="#09244B" 
                                FontFamily="Microsoft Sans Serif" FontSize="13" 
                                ShowSpinButton="True"
                                MaxWidth="100">
                                
                                <Validation.ErrorTemplate>
                                    <StaticResource ResourceKey="ErrorTemplate"/>
                                </Validation.ErrorTemplate>
                                
                            </sf:IntegerTextBox>
                            
                            <TextBlock Text="—" FontFamily="Microsoft Sans Serif" FontSize="13" FontWeight="DemiBold" Margin="5,0" VerticalAlignment="Center"/>
                            
                            <sf:IntegerTextBox 
                                Value="{Binding RowRangeEnd, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                                NullValue="{x:Null}"
                                UseNullOption="True"
                                IsNull="True"
                                VerticalAlignment="Center" 
                                MinValue="1"
                                Height="25" Width="100"
                                BorderBrush="#09244B" SelectionBrush="#09244B" 
                                FontFamily="Microsoft Sans Serif" FontSize="13" 
                                ShowSpinButton="True"
                                MaxWidth="100">
                                
                                <Validation.ErrorTemplate>
                                    <StaticResource ResourceKey="ErrorTemplate"/>
                                </Validation.ErrorTemplate>
                                
                            </sf:IntegerTextBox>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
                
                
                   <controls:HoverButton
                        IsEnabled="{Binding ImportButtonIsEnabled}"
                        VerticalAlignment="Center" HorizontalAlignment="Center"
                        ButtonWidth="90" ButtonHeight="30"
                        NormalBackground="#09244B"
                        HoverBackground="#E8E8E8"
                        ContentFill="White"
                        HoverContentFill="#09244B"
                        ChangeIconHover="False"
                        TextContent="Імпортувати"
                        TextFontFamily="Microsoft Sans Serif"
                        TextFontSize="12"
                        ContentPadding="3"
                        ToolTip="Імпортувати з Excel">
                       
                       <i:Interaction.Triggers>
                           <i:EventTrigger EventName="MouseLeftButtonUp">
                               <i:InvokeCommandAction Command="{Binding ImportCommand}"/>
                           </i:EventTrigger>
                       </i:Interaction.Triggers>
                       
                   </controls:HoverButton>
                
            </StackPanel>
            
        </Grid>
    </Border>
    
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="PreviewKeyDown">
            <i:InvokeCommandAction Command="{Binding UserControlKeyDownCommand}"
                                   PassEventArgsToCommand="True"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>
    
</UserControl>
