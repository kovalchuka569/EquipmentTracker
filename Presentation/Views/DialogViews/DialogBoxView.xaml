<UserControl x:Class="Presentation.Views.DialogViews.DialogBoxView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:sf="http://schemas.syncfusion.com/wpf">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Resources;component/ModuleResources/DialogBoxView.Resources.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <!-- Root border -->
    <Border Style="{StaticResource DialogBorderStyle}"
            ClipToBounds="True">
        
        <!-- Main grid -->
        <Grid>
            
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />  <!-- Title -->
                <RowDefinition Height="1" />     <!-- Top separator -->
                <RowDefinition Height="*" />     <!-- Content -->
                <RowDefinition Height="1" />     <!-- Bottom separator -->
                <RowDefinition Height="Auto" />  <!-- Buttons -->
            </Grid.RowDefinitions>
            
            <!-- Icon -->
            <Image Grid.Row="0" Source="{Binding Icon, Converter={StaticResource DialogBoxIconToImageSourceConverter}}"
                   Width="32"
                   Height="32"
                   HorizontalAlignment="Left"
                   Margin="12,6,0,6"/>
            
            <!-- Top separator -->
            <Border Grid.Row="1"
                    Style="{StaticResource DialogSeparatorStyle}" />
            
            <!-- Content -->
            <StackPanel Grid.Row="2"
                        Margin="{StaticResource Margin12}">
                
                <!-- Title -->
                <TextBlock Text="{Binding Title}"
                           Style="{StaticResource TitleTextBlockStyle}"
                           Margin="{StaticResource Margin00012}"
                           HorizontalAlignment="Left"/>
                
                <!-- Message text block -->
                <TextBlock Text="{Binding Message}"
                           Style="{StaticResource DefaultTextBlockStyle}"
                           FontSize="{StaticResource DialogBoxMessageFontSize}"
                           HorizontalAlignment="Left"/>
                
            </StackPanel>
            
            <!-- Bottom separator -->
            <Border Grid.Row="3"
                    Style="{StaticResource DialogSeparatorStyle}" />
            
            <!-- Buttons border -->
            <Border Grid.Row="4"
                    Background="{StaticResource NeutralLight1.Brush}"
                    CornerRadius="0,0,6,6">
                
                <!-- Buttons items control -->
                <ItemsControl ItemsSource="{Binding VisibleButtons}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Rows="1"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
        
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <sf:ButtonAdv Label="{Binding Text}"
                                          Command="{Binding Command}"
                                          Style="{Binding Style, Converter={StaticResource ButtonStyleToStyleConverter}}"
                                          Margin="12"
                                          HorizontalAlignment="Stretch"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
    
            </Border>
            
        </Grid>  
        
    </Border>
    
</UserControl>
